
@inproceedings{bertineti_heuristic_2019,
	title = {Heuristic {Scheduling} {Algorithm} for {Load} {Shift} {DSM} {Strategy} in {Smart} {Grids} and {IoT} {Scenarios}},
	doi = {10.1109/ISGT-LA.2019.8895488},
	abstract = {Smart Grids (SG) contribute to the modernization of the current electric grid. Among many features, it includes the demand side management (DSM) strategies which deal with the optimization of the power consumption patterns and the efficient use of energy. These strategies play an important role in both the final cost of energy and the control of the peak to average power ratio (PAPR). This paper reviews the main strategies of DSM and proposes an algorithm for a multi-objective optimization (MOO) DSM problem based on the day-ahead load-shifting strategy of scheduling. A discrete time varying model for the price of energy over a day is considered. A greedy search algorithm with limited complexity is employed in order to perform scheduling on the controllable loads, aiming for the minimization of both the total energy daily cost and the PAPR. The loads considered have different average power values and time-constrained allowable intervals to be powered on. The proposed algorithm can deal with the constraints ensuring that all loads will be scheduled and presenting satisfactory results in terms of cost and PAPR minimization.},
	booktitle = {2019 {IEEE} {PES} {ISGT} {Latin} {America}},
	author = {Bertineti, D. P. and Canha, L. N. and Medeiros, A. P. and de Azevedo, R. M. and da Silva, B. F.},
	month = sep,
	year = {2019},
	keywords = {smart power grids, Internet of Things, optimisation, power consumption, search problems, demand side management, pricing, power generation scheduling, Demand side management, smart grids, controllable load, day-ahead load-shifting strategy, demand side management strategies, discrete time varying model, dynamic tariff, electric grid, energy cost, greedy search algorithm, heuristic scheduling algorithm, IoT scenarios, load shift, load shift DSM strategy, multiobjective optimization DSM problem, PAPR minimization, peak to average power ratio, power consumption patterns, Smart grid, time-constrained allowable intervals},
	pages = {1--6},
	file = {IEEE Xplore Abstract Record:C\:\\Users\\fonta\\Zotero\\storage\\SI2NDN8N\\8895488.html:text/html},
}

